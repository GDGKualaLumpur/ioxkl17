{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/default",
    "rewrites": [
      {
        "source": "!/__/**",
        "destination": "/index.html"
      },
      {
        "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg)",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source" : "**/service-worker.js",
      "headers": [{
        "key" : "Cache-Control",
        "value" : "private, max-age=0, no-cache"
      }]
    }]
  }
}